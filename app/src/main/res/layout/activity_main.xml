<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#999"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lista dos Condomínios"
        android:textColor="#000"
        android:textSize="28dp"
        android:textAlignment="center"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ID"
            android:background="#000"
            android:textStyle="bold"
            android:textColor="#ddd"
            android:textAlignment="center"
            android:layout_marginLeft="10dp"
            android:layout_weight="3"
            android:textSize="25dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nome do Condomínio"
            android:background="#600060"
            android:textColor="#ddd"
            android:textStyle="bold"
            android:layout_weight="1"
            android:paddingLeft="5dp"
            android:layout_marginRight="10dp"
            android:textSize="25dp"/>
    </LinearLayout>

    <ListView
        android:id="@+id/listCond"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="10dp"
        android:background="#ddd"
        android:layout_marginBottom="5dp"
        android:layout_height="400dp"></ListView>

    <Button
        android:id="@+id/btnAddCond"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Adicionar novo condomínio"
        android:layout_marginHorizontal="10dp"
        android:layout_marginBottom="5dp"
        android:textColor="#fff"
        android:textSize="20dp"
        android:background="#006666"/>

</LinearLayout>